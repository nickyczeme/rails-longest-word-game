<div class="container">

  <h1>New game</h1>
  <ul class="letters">
    <% @letters.each do |letter| %>
      <li><%= letter %></li>
    <% end %>
  </ul>


  <form action="/score" method="post">
    <label for="word">What is the longest word you can find?</label>
      <br>
    <div class = "searcher">
      <input type="text" name="answer" id="word">
      <input type="submit" value="Play" class="button">
    </div>

    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <%= hidden_field_tag :start_time, @start_time %>
  </form>
</div>
